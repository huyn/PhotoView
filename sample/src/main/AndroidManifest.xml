<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.chrisbanes.photoview.sample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity android:name=".LauncherActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SimpleSampleActivity" android:screenOrientation="portrait"/>

        <activity android:name=".TranslateSampleActivity" android:screenOrientation="portrait"/>

        <activity android:name=".ViewPagerActivity" android:screenOrientation="portrait"/>

        <activity android:name=".RotationSampleActivity" android:screenOrientation="portrait"/>

        <activity android:name=".PicassoSampleActivity" android:screenOrientation="portrait"/>

        <activity android:name=".ActivityTransitionActivity" android:screenOrientation="portrait"/>

        <activity android:name=".ActivityTransitionToActivity" android:screenOrientation="portrait"/>

        <activity android:name=".ImmersiveActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>
